@model ProductDto
@{
    ViewData["Title"] = "Save";
}

<h1>Save</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Products" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@(ViewBag.categories)" class="form-control">
                    <option value="0" selected>Choose</option>
                </select>
                <span asp-validation-for="CategoryId" class="text text-danger"></span>
            </div>
            <div class="form-group my-1">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
